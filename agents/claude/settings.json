{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "enabledPlugins": {
    "swift-lsp@claude-plugins-official": true
  },
  "feedbackSurveyState": {
    "lastShownTime": 1754026601297
  },
  "permissions": {
    "allow": [
      "Bash(ls:*)",
      "Bash(cat:*)",
      "Bash(grep:*)",
      "Bash(find:*)",
      "Bash(tree:*)",
      "Bash(mkdir:*)",
      "Bash(say:*)",
      "Bash(git checkout:*)",
      "Bash(git fetch:*)",
      "Bash(git ls-tree:*)",
      "Bash(git mv:*)",
      "Bash(gh api:*)",
      "Bash(gh issue list:*)",
      "Bash(gh issue view:*)",
      "Bash(gh pr diff:*)",
      "Bash(gh pr list:*)",
      "Bash(gh pr view:*)",
      "Bash(gh repo list:*)",
      "Bash(gh search:*)",
      "WebFetch(domain:github.com)",
      "WebFetch(domain:raw.githubusercontent.com)",
      "WebSearch",
      "Read",
      "Edit",
      "Write"
    ],
    "deny": [
      "Read(**/.env.secret)"
    ]
  },
  "hooks": {
    "Notification": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "jq -r '.message // \"Notification\"' | say -v Samantha",
            "async": true
          }
        ]
      }
    ],
    "PermissionRequest": [
      {
        "matcher": "AskUserQuestion",
        "hooks": [
          {
            "type": "command",
            "command": "jq -r '.tool_input.questions[0].question // \"質問があります\"' | say -r 200",
            "async": true
          }
        ]
      },
      {
        "matcher": "Bash|Edit|Write|Read|WebFetch|WebSearch|Task|Glob|Grep|mcp__.*",
        "hooks": [
          {
            "type": "command",
            "command": "jq -r '.tool_name // \"Tool\"' | xargs -I{} say -v Samantha 'Permission requested for {}'",
            "async": true
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "say -v Samantha 'Ready for input'",
            "async": true
          }
        ]
      }
    ]
  }
}
